@model AudioStore.Models.Entities.User;
@{
    ViewData["Title"] = "Authentication";
}

<style>
    .required {
        color: #f00;
        padding-left: 3px;
    }
    .register-container {
        display: flex;
        justify-content: center;
    }
    @* .bg-success {
        padding: 10px 40px; 
        margin-bottom: 8px;
    } *@
</style>

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="active">Authentication Account</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<div class="container">
    <div class="register-container row">
        <div class="col-md-6">

            <span class="bg-success" asp-for="@TempData["success"]"></span>

            <form method="post">
                <div class="bg-danger">@ViewBag.error</div>
                <div class="form-group">
                    <label>Code</label> <span class="required">*</span>
                    <input type="text" id="code-to-confirm" class="form-control" maxlength="8" placeholder="enter 8 characters" />
                </div>

                <button type="submit" class="btn btn-success">Submit</button>
            </form>

        </div>
    </div>
</div>