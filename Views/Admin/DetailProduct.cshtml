@model AudioStore.Models.Entities.Product
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = "DetailProduct";
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
    <h1 class="mt-4">Detail Product @Model.Name</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="color: #0779e4;" href="/">Home Admin</a></li>
        <li class="breadcrumb-item active">Product Detail</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="IndexProduct" asp-controller="Admin">Back to page</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td class="font-weight-bold">
                                Product Name
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Category
                            </td>
                           
                                @foreach (var item in ViewBag.x)
                                {
                                    @if (item.ID == @Model.CategoryID)
                                    {
                                        <td> @item.Name</td>
                                    }
                                }
                                
                            
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Price
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Price)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Stock
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Stock)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Description
                            </td>
                            <td>
                                @Html.DisplayFor(mdel=> mdel.Desc )
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Product Detail
                            </td>
                            <td>
                                <style>
                                    #more {
                                        display: none;
                                    }
                                </style>
                                @Html.Raw(Model.Detail)
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">
                                Img Product
                            </td>

                            <td>
                                <img style="width:150px;height:150px"
                                    src="@(Configuration["BaseAddress"] + Model.Thumnail)" alt="Alternate Text" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>