@model AudioStore.Models.Entities.Category
@{
    ViewData["Title"] = "DetailCategory";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="mt-4">Detail</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Admin" style="color: #0779e4;">Home Admin</a>
        </li>
        <li class="breadcrumb-item active">Detail</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="IndexCategory" asp-controller="Admin">Về danh sách</a>
        </div>
        <form asp-action="Detail" method="post">
            <div class="card-body">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ID)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>
                </div>
            </div>
        </form>
    </div>
</div>
