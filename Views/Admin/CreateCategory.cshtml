@model AudioStore.Models.Entities.Category
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "_LayoutAdmin";
}
<div class="container-fluid">
    <h1 class="mt-4">Create Category</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="color: #0779e4;" href="/">Home Admin</a></li>
        <li class="breadcrumb-item active">Create Category</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="IndexCategory" asp-controller="Admin">Back to page</a>
        </div>
        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="CreateCategory" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
